.community.locked
	background-size cover
	background-position center center
	.overcast 
		position absolute
		height 100%
		width 100%
		background-color black
		opacity 0.3
		z-index -1
	.hero-unit
		background-color transparent
		&.desktop
			height 350px
			padding 60px 0 60px 0
			margin-top 100px
			h1
				margin -10px 0 0 0
				padding 50px
				font-size 100px
				background-size 100% 200px
				background-position center -0px
				overflow visible
				white-space: nowrap;
				letter-spacing 1px
			h6
				font-size 100px
				background-size 100% 150px
				background-position center -5px
				margin-top: -75px
			button
				font-family mission_scriptregular
				font-size 50px
				margin-top 20px
				padding 30px 30px 26px 30px
			p
				background-image url('http://s8.postimg.org/3oa6hqp1x/blackout_sprite.png')
				background-size 50% 40px
				background-repeat no-repeat
				background-position center
				margin-top 20px
				color white
		&.tablet
			height 325px
			padding 60px 0 60px 0
			h1
				margin 0
				padding 0
				font-size 90px
				background-size 100% 120px
				overflow visible
				white-space: nowrap;
				letter-spacing 1px
			h6
				font-size 60px
				background-size 50% 50px
			button
				font-family mission_scriptregular
				font-size 50px
				margin-top 20px
				padding 30px 30px 26px 30px
			p
				background-image url('http://s8.postimg.org/3oa6hqp1x/blackout_sprite.png')
				background-size 50% 30px
				background-repeat no-repeat
				background-position center
				margin-top 20px
				color white
		&.phone
			height 265px
			padding 30px 30px 60px 30px
			h1
				font-size 65px
				background-size 100% 120px
				line-height 60px
			h6
				font-size 30px
				background-size 100% 40px
			button
				font-family mission_scriptregular
				font-size 30px
				margin-top 15px
				padding 20px 20px 16px 20px
		h1, h6
			margin 0
			height 150px
			background-image url('http://s8.postimg.org/3oa6hqp1x/blackout_sprite.png')
			background-position center
			background-repeat no-repeat
			font-family mission_scriptregular
			color white
			letter-spacing 1px
			text-shadow  -1px -1px 0 #DEDEDE, 1px -1px 0 #DEDEDE, -1px 1px 0 #DEDEDE, 1px 1px 0 #DEDEDE, 2px 2px 5px #999
