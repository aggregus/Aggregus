.homepage
	.hero-unit
		border-radius 0
		background-size cover
		background-position center
		position relative
		margin-top -25px
		.overcast
			height 100%
			width 100%
			background-color black
			position absolute
			top 0px
			opacity 0.2
			z-index 0
			&.phone
				margin-left -30px
		&.desktop
			height 325px
			padding 60px 0 60px 0
			h1
				margin -10px 0 0 0
				padding 0
				font-size 100px
				background-size 100% 100px
				overflow visible
				white-space: nowrap;
				letter-spacing 0px
				z-index 1
				position relative
			h6
				font-size 80px
				background-size 50% 50px
				z-index 1
				position relative
			button
				font-family wisdom_scriptregular
				font-size 50px
				margin-top 20px
				padding 30px 30px 26px 30px
				z-index 1
				position relative
			p
				background-image url('http://s8.postimg.org/3oa6hqp1x/blackout_sprite.png')
				background-size 50% 40px
				background-repeat no-repeat
				background-position center
				margin-top 20px
				color white
				z-index 1
				position relative
		&.tablet
			height 325px
			padding 60px 0 60px 0
			h1
				margin 0
				padding 0
				font-size 70px
				background-size 100% 70px
				overflow visible
				white-space: nowrap;
				letter-spacing 1px
				z-index 1
				position relative
			h6
				font-size 60px
				background-size 50% 50px
				z-index 1
				position relative
			button
				font-family wisdom_scriptregular
				font-size 50px
				margin-top 20px
				z-index 1
				position relative
				padding 30px 30px 26px 30px
			p
				background-image url('http://s8.postimg.org/3oa6hqp1x/blackout_sprite.png')
				background-size 50% 30px
				background-repeat no-repeat
				background-position center
				margin-top 20px
				color white
				z-index 1
				position relative
		&.phone
			height 265px
			padding 30px 30px 60px 30px
			h1
				font-size 45px
				background-size 100% 45px
				line-height 50px
				z-index 1
				position relative
			h6
				font-size 25px
				background-size 100% 40px
				z-index 1
				position relative
			button
				font-family wisdom_scriptregular
				font-size 30px
				margin-top 15px
				padding 20px 20px 16px 20px
				z-index 1
				position relative
		h1, h6
			margin 0
			background-image url('http://s8.postimg.org/3oa6hqp1x/blackout_sprite.png')
			background-position center
			background-repeat no-repeat
			font-family wisdom_scriptregular
			color white
			letter-spacing 0px
			z-index 1
			text-shadow  1px 1px 0 #333;

